<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilesActivity">

    <androidx.appcompat.widget.Toolbar
        app:title=""
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">


        <TextView
            android:layout_marginRight="3dp"
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/5"
            android:textColor="@android:color/white"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="right"
            />

        <TextView
            android:id="@+id/p_number"
            android:textColor="@android:color/white"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="left"
            android:text="profile: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/chk_tag_state"
            android:gravity="center"
            android:text=""
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />


    </androidx.appcompat.widget.Toolbar>

    <!--</androidx.appcompat.widget.Toolbar>-->


    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="?android:attr/actionBarSize"
        android:layout_below="@id/toolbar"
        />

    <ListView
        android:background="@android:color/white"
        android:layout_below="@id/fragment"
        android:layout_above="@id/panel"
        android:id="@+id/tag_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="150dp"
        />


    <LinearLayout
        android:id="@+id/panel"
        android:elevation="8dp"
        android:background="@android:color/white"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/buttons"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="40dp"
        android:divider="@drawable/divider_shape"
        android:showDividers="middle">

        <ImageButton
            style="@style/MyImageButton"
            android:src="@drawable/ic_first"
            android:textAllCaps="false"
            android:id="@+id/first_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageButton
            style="@style/MyImageButton"
            android:src="@drawable/ic_back"
            android:textAllCaps="false"
            android:id="@+id/previous_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageButton
            style="@style/MyImageButton"
            android:src="@drawable/ic_next"
            android:textAllCaps="false"
            android:id="@+id/next_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageButton
            style="@style/MyImageButton"
            android:src="@drawable/ic_last"
            android:textAllCaps="false"
            android:id="@+id/last_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:elevation="8dp"
        android:background="@android:color/white"
        android:id="@+id/buttons"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <ImageButton
            style="@style/MyImageButton"
            android:id="@+id/first_profile"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_rewind"
            android:layout_weight="0.25"
            />

        <ImageButton
            style="@style/MyImageButton"
            android:id="@+id/previous_profile"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:src="@drawable/ic_play_mirror" />

        <ImageButton
            style="@style/MyImageButton"
            android:id="@+id/ok"
            android:layout_margin="2dp"
            android:src="@drawable/ic_ok"
            android:layout_weight="0.25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageButton
            style="@style/MyImageButton"
            android:layout_margin="2dp"
            android:id="@+id/next_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:src="@drawable/ic_play" />

        <ImageButton
            style="@style/MyImageButton"
            android:layout_margin="2dp"
            android:layout_weight="0.25"
            android:id="@+id/last_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fast_forward" />

    </LinearLayout>


</RelativeLayout>